# Environment variables for Docker deployment

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_HERE_FROM_BOTFATHER

# Database Configuration
DATABASE_URL=sqlite:///./assistant.db
# For PostgreSQL, use:
# DATABASE_URL=postgresql://admin:admin123@postgres:5432/money_management

# Security
SECRET_KEY=your-secret-key-change-in-production-make-it-very-long-and-random

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Service URLs (for inter-service communication)
AUTH_SERVICE_URL=http://auth_service:8001
NOTIFICATION_SERVICE_URL=http://notification_service:8002
API_GATEWAY_URL=http://gateway:8000

# Frontend Configuration
VITE_API_URL=http://localhost:8000
